<h1>List of Free Pool Items</h1>
<hr>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th colspan="2" width="30%">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @free_pool_items.each do |free_pool_item| %>
      <tr>
        <td><%= free_pool_item.id %></td>
        <td><%= free_pool_item.problem.name %></td>
        
        <td>
          <%= link_to edit_admin_free_pool_item_path(free_pool_item) do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
          <% end %>
        </td>
        
        <td>
          <%= link_to [:admin, free_pool_item], method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Free Pool Item', new_admin_free_pool_item_path, class: 'btn btn-default' %>
