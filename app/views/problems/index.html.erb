<h1>List of Problems</h1>
<hr>

<% if params[:notice] != nil %>
<div class="alert alert-danger" role="alert">Oak's words echoed... <b><%= params[:notice] %></b><br>There's a time and place for everything, but not now!</div>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="5%">Lv.</th>
      <th width="50%">Problem Name</th>
      <th width="10%">Reward</th>
      <th colspan="2">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.difficulty %></td>
        <td><%= problem.name %></td>
        <td><%= problem.reward %></td>
        <td>
          <%= link_to problem do %>
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Read Statement
          <% end %>
        </td>
        <td>
          <% if problem.solved? current_user %>
          <%= link_to '#' do %>
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Problem Solved
          <% end %>
          <% else %>
          <%= link_to problem_sell_path(problem) do %>
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Sell Problem
          <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
