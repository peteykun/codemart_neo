<h1>Leaderboard</h1>
<hr>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th style="width: 70%">Name</th>
      <th style="width: 30%">Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username.titleize %></td>
        <td><%= user.balance %> coins</td>
      </tr>
    <% end %>
  </tbody>
</table>
