source 'https://rubygems.org'
ruby '2.1.1'

gem 'rails', '~> 4.2.1'

group :doc do
  gem 'sdoc', '~> 0.4.0'
end

group :development do
  # Use mysql as the database for Active Record
  gem 'mysql2'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'byebug'
end

group :production do
  # Use postgres as the database for Active Record
  gem 'pg'
  gem 'rails_12factor'
end

gem 'passenger'
gem 'responders', '~> 2.0'
gem 'json_builder'
gem 'sass-rails', '~> 4.0.3'
